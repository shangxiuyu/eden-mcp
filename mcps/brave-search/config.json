{
    "id": "brave-search",
    "requirements": {
        "env": {
            "BRAVE_API_KEY": {
                "description": "Brave Search API Key.",
                "required": true,
                "help_url": "https://api.search.brave.com/app/dashboard"
            }
        }
    },
    "installer": {
        "command": "npx",
        "args": [
            "-y",
            "@modelcontextprotocol/server-brave-search"
        ],
        "env": {
            "BRAVE_API_KEY": "{{BRAVE_API_KEY}}"
        }
    }
}