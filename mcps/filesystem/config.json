{
    "id": "filesystem",
    "requirements": {
        "env": {
            "ALLOWED_DIRECTORIES": {
                "description": "Comma-separated list of absolute paths that the agent can access.",
                "required": true,
                "example": "/Users/user/Documents,/Users/user/Projects"
            }
        }
    },
    "installer": {
        "command": "npx",
        "args": [
            "-y",
            "@modelcontextprotocol/server-filesystem",
            "./"
        ]
    }
}