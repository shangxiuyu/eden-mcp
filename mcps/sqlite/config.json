{
    "id": "sqlite",
    "requirements": {
        "env": {
            "SQLITE_DB_PATH": {
                "description": "Path to the sqlite database file. Defaults to './data/agentx.db'",
                "required": false,
                "default": "./data/agentx.db"
            }
        }
    },
    "installer": {
        "command": "npx",
        "args": [
            "-y",
            "@modelcontextprotocol/server-sqlite",
            "--db-path",
            "./data/agentx.db"
        ]
    }
}